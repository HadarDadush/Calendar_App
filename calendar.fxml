<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane fx:id="calendarAnchorPane" prefHeight="502.0" prefWidth="697.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CalendarController">
    <children>
        <!-- Label for Year -->
        <Label layoutX="40.0" layoutY="13.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Year:" />
        <ComboBox fx:id="yearComboBox" layoutX="97.0" layoutY="12.0" />
        
        <!-- Label for Month -->
        <Label layoutX="217.0" layoutY="13.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Month:" />
        <ComboBox fx:id="monthComboBox" layoutX="296.0" layoutY="12.0" />
        
        <GridPane fx:id="calendarGrid" hgap="5" layoutX="20" layoutY="60" vgap="5">
            <!-- This will be populated dynamically -->
        </GridPane>
    </children>
</AnchorPane>
